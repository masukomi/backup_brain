<div class="container">
  <div class="row">
    <div class="col-9">
      <heading>
        <% if ! defined?(@tags) %>
          <%= link_to(t("bookmarks.heading"), bookmarks_path) %>
        <% else %>
          <%= link_to(t("bookmarks.tagged_with_heading", tags: @tags.join(', ')), bookmarks_tagged_with_path(tags: @tags)) %>
        <% end %>
      </heading>
      <% if @total_bookmarks != 0 %>
        <span class="bookmark-count">
        <%= t('bookmarks.counter',
              formatted_count: number_with_delimiter(
                                @pagy.count || @bookmarks.count,
                                delimiter: t('number.format.delimiter')
              )
            ) %>
        </span>
      <% end %>
    </div>
  </div>
</div>


<% if @total_bookmarks == 0 %>
  <div class="container" id="bookmarks">
    <div class="row">
      <div class="col">
        <%==t('bookmarks.none_message') %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container" id="bookmarks">
    <% if ! @pagy.nil? && @pagy.count > (@pagy.items * @pagy.page) %>
      <div class="row">
        <div class="col">
          <%= render partial: 'pagy/bookmark_db_results', locals: {pagy: @pagy} %>
        </div>
      </div>
    <% end %>
    <% @bookmarks.each do |bookmark| %>
      <div class="row">
        <div class="col">
          <%= render bookmark %>
        </div>
      </div>
    <% end %>
    <% if ! @pagy.nil? && @pagy.count > (@pagy.items * @pagy.page) %>
      <div class="row">
        <div class="col">
          <%= render partial: 'pagy/bookmark_db_results', locals: {pagy: @pagy} %>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
