<div class="container">

  <% if @archive.present?  %>
  <div class="row">
    <div class="col">
      <div><%=t('bookmarks.archived_date_message',
                   archive_date: I18n.l(@archive.created_at.to_date, format: :default)
                ) %></div>

      <hr />
    </div>
  </div>
    <div class="row">
      <div class="col">
        <%#TODO deal with rendering archives that might not be markdown %>
        <%= render partial: 'bookmark_md_archive',
            locals: {archive: @archive} %>
      </div>
    </div>
  <% else %>
    <div class="row alert alert-warning">
      <div class="col">
        <%= t('errors.bookmarks.no_archive_found') %>
      </div>
    </div>
  <% end %>
</div>

<% content_for :sidebar do %>
  <%= render partial: 'shared/sidebar_page_actions_top' %>
  <div class="container">
    <div class="row">
      <div class="col">
         <%= link_to t('bookmarks.edit_this_link'), edit_bookmark_path(@bookmark),
             class: 'btn btn-primary compact-button' %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="safe-space">
          <%= button_to "Destroy this bookmark", @bookmark,
              method: :delete ,
              class: 'btn btn-danger compact-button'%>
        </div>
      </div>
    </div>
    <!-- archives list -->
    <div class="row">
      <div class="col">
        <em><%= t("bookmarks.archives_list_heading") %></em>
        <ul id="bookmark-archives-listing">
          <% @bookmark.sorted_archives.each do | an_archive |
             current = (an_archive.id == @archive&.id)
             %>
            <li class="<%= current ? 'current-archive-item' : '' %>">
              <%= show_archive_link(an_archive) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
</div>
