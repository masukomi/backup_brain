  <% if thing.errors.any? %>
    <div class="row">
      <div class="col" style="color: red">
		  <%= t("misc.errors.num_errors_prevented_save",
          number: pluralize(thing.errors.count, "error"),
          thing_type: thing.class.name.humanize) %>
        <ul>
          <% thing.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
